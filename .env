# Environment Variables untuk Telegram Bot Manager

# Port untuk server development
PORT=3000

# Environment (development/production)
NODE_ENV=production

# Token admin untuk akses dashboard (ganti dengan token yang aman)
ADMIN_TOKEN=your_super_secret_admin_token_here

# Database configuration
DATABASE_PATH=./data/bot_database.db

# Telegram Bot Configuration (default bot, jika ada)
# TELEGRAM_BOT_TOKEN=1234567890:ABCdefGhIJKlmNoPQRsTUVwxyz

# Webhook URL base (akan diisi otomatis di production)
# WEBHOOK_BASE_URL=https://your-domain.vercel.app

# Logging level
LOG_LEVEL=info

# Rate limiting (opsional)
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# CORS configuration
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Session configuration (jika menggunakan session)
# SESSION_SECRET=your_session_secret_key
# SESSION_MAX_AGE=86400000

# Data retention (dalam hari)
DATA_RETENTION_DAYS=90

# Backup configuration
# AUTO_BACKUP_ENABLED=true
# BACKUP_INTERVAL_HOURS=24
# BACKUP_PATH=./backups

# Monitoring (jika menggunakan Sentry, dll)
# SENTRY_DSN=your_sentry_dsn
# MONITORING_ENABLED=false

# Email notifications (opsional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_specific_password
# NOTIFICATION_EMAIL=admin@example.com

# Security headers
HELMET_ENABLED=true
CONTENT_SECURITY_POLICY=true

# Cache configuration
CACHE_ENABLED=true
CACHE_TTL=300000

# Untuk development dengan ngrok (jika perlu)
# NGROK_AUTHTOKEN=your_ngrok_token
# NGROK_SUBDOMAIN=your-subdomain
